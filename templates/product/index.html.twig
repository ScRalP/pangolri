{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {%for category in categories%}
                <li class="nav-item active">
                    <a class="nav-link" href="#{{path ('show_categ', {'id' : category.id})}}">{{ category.name }}</a>
                </li>             
                {%endfor%}
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
  </header>


<h1 class="my-4">Product list</h1>

<div class="row">

    {% for product in products %}
    <div id="{{ product.id }}" class="product-container col-3 my-3">
        <!-- Card -->
        <div class="card shadow">

            {# afficher l'image sinon mettre une image "?" #}
            {% if product.images %}
                <!-- Card image -->
                <img class="card-img-top" src={{ asset(product.images) }} alt="{{product.images}}">
            {% else %}
                <img class="card-img-top" src={{ asset('build/images/products/unknown.png') }} alt="unknown product">
            {% endif %}

            <!-- Card content -->
            <div class="card-body">

                <!-- Title -->
                <h4 class="card-title"><a href={{ path('show_product', {'id' : product.id}) }}>{{ product.title }}</a></h4>
                <!-- Text -->
                <p class="card-text">{{ product.description }}</p>
                {% for category in product.categories %}
                    <span class="badge badge-secondary">{{category}}</span>
                {% endfor %}
            </div>

        </div>
    <!-- Card -->
    </div>
    {% else %}
    <p>No product to display</p>
    {% endfor %}


</div>

{% endblock %}
