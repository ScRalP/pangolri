{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

<h1>Product list</h1>

<div class="row">
{% for product in products %}
    <div id="{{ product.id }}" class="product-container col-3 my-3">
        <!-- Card -->
        <div class="card shadow">

            {# afficher l'image sinon mettre une image "?" #}
            {% if product.images %} {# On verifie si il y a des images #}
                {% if image_exist( products.images|first ) %} {# On verifie si la premi√®re image est valide #}
                    <!-- Card image -->
                    <img class="card-img-top" src='build/images/products/{{products.images|first}}' alt='{{products.images|first}}'>
                {% else %}
                    <img class="card-img-top" src={{ asset('build/images/products/unknown.png') }} alt='unknown product'>
                {% endif %}
            {% else %}
                <img class="card-img-top" src={{ asset('build/images/products/unknown.png') }} alt='unknown product'>
            {% endif %}

            <!-- Card content -->
            <div class="card-body">

                <!-- Title -->
                <h4 class="card-title"><a href={{ path('show_product', {'id' : product.id}) }}>{{ product.title }}</a></h4>
                <!-- Text -->
                <p class="card-text">{{ product.description }}</p>
                {% for category in product.categories %}
                    <span class="badge badge-secondary">{{category}}</span>
                {% endfor %}

                <label class="">
            </div>

        </div>
    <!-- Card -->
    </div>
{% else %}
    <p>No product to display</p>
{% endfor %}
</div>

{% endblock %}
