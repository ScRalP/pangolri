{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header">
        <h1>{{ product.title }}</h1>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <p>{{ product.description }}</p>
            </div>

            <div class="col-6">
                <img class="card-img-top" src='build/images/products/{{product.images}}' alt='{{product.images}}'>
            </div>
        </div>
    </div>
</div>


<a class="btn btn-primary mt-3" href={{ path('product_list') }}>Retour aux produits</a>

{% endblock %}
