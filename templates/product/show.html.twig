{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header">
        <div class="row">
        <h1 class="col-4">{{ product.title }}</h1>
        <h1 class="col-2 offset-6">{{ product.price }}â‚¬</h1>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <p>{{ product.description }}</p>
            </div>

            {% for image in product.images %}
                <div class="col-6">
                    <img class="card-img-top" src={{ product_image(image) }} alt={{ image }}>
                </div>
            {% endfor %}

        </div>
    </div>
</div>


<a class="btn btn-primary mt-3" href={{ path('product_list') }}>Retour aux produits</a>
<a class="btn btn-primary mt-3" href={{ path('add_product', {'id' : product.id}) }}>Ajouter au panier</a>

<a href={{ path('product_list') }}>Retour aux produits</a>

{% endblock %}
